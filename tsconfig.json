{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "es2016",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": false,
    "resolveJsonModule": true, // 支持json
    "esModuleInterop": true, // 支持引入commonjs
    "jsx": "preserve",
    "lib": ["esnext","dom"],
    "baseUrl": ".", 
    "paths": {
      "@vue/*":["packages/*/src"]
    }
  }
}
